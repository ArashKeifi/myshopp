<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_proshopp/models/fields">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="parent_id"
                class="chzn-color-state form-control"
                type="locationparent"
                label="COM_PROSHOPP_LOCATION_PARENT_LABEL"
                description="COM_PROSHOPP_LOCATION_PARENT_DESC"/>

        <field
                name="lft"
                type="hidden"
                filter="unset"/>

        <field
                name="rgt"
                type="hidden"
                filter="unset"/>

        <field
                name="level"
                type="hidden"
                filter="unset"/>

        <field
                name="path"
                type="text"
                label="COM_PROSHOPP_LOCATION_PATH_LABEL"
                class="readonly"
                size="40"
                readonly="true"/>

        <field
                name="title"
                type="text"
                label="COM_PROSHOPP_LOCATION_TITLE_LABEL"
                size="40"
                class="form-control input-lg m-b"
                required="true"/>

        <field
                name="alias"
                class="form-control input-mb m-b"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                description="JFIELD_ALIAS_DESC"
                hint="JFIELD_ALIAS_PLACEHOLDER"
                size="45"/>
        <field
                name="published"
                type="list"
                class="chzn-color-state form-control"
                default="1"
                size="1"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
                name="access"
                class="form-control"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                description="JFIELD_ACCESS_DESC"/>
    </fieldset>
</form>
