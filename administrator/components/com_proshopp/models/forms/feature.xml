<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldpath="/administrator/components/com_proshopp/models/fields">
        <field
                name="id"
                type="hidden"
        />
        <field name="published"
               type="list"
               label="JSTATUS"
               class="chzn-color-state form-control"
               size="1"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="published"
               type="list"
               label="JSTATUS"
               class="chzn-color-state form-control"
               size="1"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="required"
               type="list"
               label="JREQUIRED"
               class="form-control"
               size="1"
               default="0">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field name="search_type"
               type="list"
               label="COM_PROSHOPP_ADMIN_SEARCH_TYPE_LBL"
               class="form-control"
               size="1"
               default="0">
            <option value="1">JNO</option>
            <option value="side">COM_PROSHOP_SEARCH_SIDEBAR</option>
            <option value="top">COM_PROSHOP_SEARCH_TOP</option>
        </field>
        <field
                name="name"
                type="text"
                label="COM_PROSHOPP_FEATURES_NAME_FIELD_NAME"
                required="true"
                size="20"
                class="form-control input-lg m-b"
        />
        <field
                name="type"
                type="ProductType"
                label="COM_PROSHOPPFEATURE_FIELD_TYPE_SELECT"
                description="COM_PROSHOPPFEATURE_FIELD_TYPE_SELECT_DESCRIPTION"
                size="20"
        />
        <field
                name="field_type_option"
                type="FieldTypeOption"
                label="COM_PROSHOPPFEATURE_FIELD_TYPE_SELECT"
                description="COM_PROSHOPPFEATURE_FIELD_TYPE_SELECT_DESCRIPTION"
                size="20"
                class="form-control m-b"
        />
        <field name="measurement"
               type="list"
               label="COM_PROSHOPPFEATURE_MEASURMENT_FIELD_NAME"
               description="COM_PROSHOPPFEATURE_MEASURMENT_FIELD_DESCRIPTION"
               size="1"
               default="1"
               class="chzn-color-state form-control">
            <option value="0">Select measurement</option>
            <option value="length">Length (m, cm, mm, in, ...)</option>
            <option value="weight">Weight (kg, g, lbs, oz)</option>
            <option value="volume">Volume (l, ml, cm³, m³, ...)</option>
            <option value="frequency">Frequency (Hz, KHz, MHz, GHz)</option>
            <option value="power">Power (W, KW, MW, mW)</option>
            <option value="time">Time (sec, min, hr, days, ...)</option>
        </field>

    </fieldset>
</form>