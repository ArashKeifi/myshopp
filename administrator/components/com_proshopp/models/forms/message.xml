<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
        />
        <field name="published"
               type="list"
               label="JSTATUS"
               class="form-control"
               size="1"
               default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>
        <field name="type"
               type="list"
               label="COM_PROSHOPP_MESSAGE_TYPE_LABEL"
               size="1"
               default="1"
               class="form-control">
            <option value="1">Email</option>
            <option value="2">SMS</option>
        </field>
        <field
                name="title"
                type="text"
                label="COM_PROSHOPP_MESSAGE_TITLE_FIELD_LBL"
                description="COM_PROSHOPP_MESSAGE_TITLE_FIELD_DESC"
                required="true"
                size="20"
                class="form-control input-lg m-b"
        />
        <field
                name="body"
                type="editor"
                label="COM_PROSHOPP_MESSAGE_BODY_FIELD_LBL"
                description="COM_PROSHOPP_MESSAGE_BODY_FIELD_DESC"
                required="true"
                size="20"
        />
    </fieldset>
</form>